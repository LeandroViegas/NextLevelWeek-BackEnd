{
    "version": 2,
    "builds": [
      { "src": "/index.js", "use": "@now/node-server"},
      { "src": "/public/**", "use": "@now/static"}
    ],
    "routes": [
        { "src": "/uploads/(.+js|.+svg|.+css|.+png|.+ico|robots.txt)", "dest": "/src/$1" },
        { "src": "", "dest": "/index.js" }
    ]
  }